<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
	<p style="font-size: 12px;">Created at: <%= @article.created_at %></p>
</p>

<h3>All comments:</h3>

<% @article.comments.each do |comment| %>

	<h4>
		<i><%= comment.author %> said:</i>
	</h4>

	<p>
		<i><%= comment.body %></i>
	</p>

<% end %>

<h4>Add comment:</h4>

<p>
	<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %>
		<br>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %>
		<br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

</p>